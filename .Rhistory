knitr::opts_chunk$set(echo = FALSE, warning =  FALSE)
library(coronavirus)
library(tidyr)
library(dplyr)
library(lubridate)
library(reactable)
library(htmltools)
library(kableExtra)
library(DT)
library(ggplot2)
library(plotly)
library(widgetframe)
library(bookdown)
Pak <- coronavirus %>%  filter(country == "Pakistan") %>%
select(date, country, type, cases) %>%
filter(date > "2020-01-31")
Paki <- Pak %>% mutate(Month = month(date,
label = TRUE,
abbr = TRUE)) %>%
mutate(Week = week(date))  %>%
mutate(Day = day(date))  %>%
pivot_wider(names_from = type,
values_from = cases)  %>%
filter(confirmed > "0") %>%
select(-date, - country) %>%
rename(Confirmed = "confirmed",
Death = "death",
Recovered = "recovered")
dt <- datatable(Paki, options = list(pageLength = 10), class = 'cell-border stripe', filter = 'top')
frameWidget(dt)
Pakis <- Paki %>% select(Confirmed, Death, Recovered)
summary(Pakis) %>% kable() %>% kable_styling(bootstrap_options = "striped",
full_width = NULL,
position = "center",
font_size = NULL,
row_label_position = "l",
repeat_header_continued = FALSE,
stripe_color = "gray!6",
stripe_index = NULL,
table.envir = "table",
fixed_thead = FALSE)
blogdown:::serve_site()
blogdown:::serve_site()
blogdown:::serve_site()
blogdown::stop_server()
blogdown:::serve_site()
